<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_rela_toolbar"
        style="@style/ToolbarRelaStyle">

        <ImageView
            android:id="@+id/search_img_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/toolbar_back" />

        <ImageView
            android:id="@+id/search_img_act"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:src="@drawable/main_toolbar_search" />

        <EditText
            android:hint="@string/search_hint_toolbar"
            android:textColorHint="@color/light_gray"
            android:id="@+id/search_edit_value"
            android:layout_toRightOf="@id/search_img_back"
            android:layout_toLeftOf="@id/search_img_act"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/search_img_back"
            android:layout_toStartOf="@id/search_img_act" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/search_text_way"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/search_spinner_way"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/search_text_local"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/search_spinner_local"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

    </LinearLayout>


</LinearLayout>