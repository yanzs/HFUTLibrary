<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:id="@+id/viewholder_header_rela_backgroud"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/viewholder_header_img_cover"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/viewholder_header_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/viewholder_header_img_cover"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/viewholder_header_img_cover"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/viewholder_header_text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewholder_header_text_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/viewholder_header_img_cover"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>