<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/circle_background">


    <TextView
        android:id="@+id/viewholder_inform_willbuy_text_name"
        style="@style/ViewHolderLoopTextStyle"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewholder_inform_willbuy_text_author"
        style="@style/ViewHolderLoopTextStyle"
        android:layout_below="@id/viewholder_inform_willbuy_text_name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/viewholder_inform_willbuy_text_publisher"
        style="@style/ViewHolderLoopTextStyle"
        android:layout_below="@id/viewholder_inform_willbuy_text_author"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/viewholder_inform_willbuy_text_state"
        style="@style/ViewHolderLoopTextStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/viewholder_inform_willbuy_text_data"
        style="@style/ViewHolderLoopTextStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/viewholder_inform_willbuy_text_state"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textSize="12sp" />


</RelativeLayout>